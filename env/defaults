DOCKER_IMAGE=postgres:11.5-alpine

DOCKER_POSTGRES_MAPPED_PORT=5432
DOCKER_POSTGRES_PORT=5432

POSTGRES_VOLUME_NAME=pg_data
POSTGRES_SUPER_USER_ROLE_NAME=postgres
POSTGRES_SUPER_USER_SECRET=password
POSTGRES_DEFAULT_DATABASE_NAME=postgres

POSTGRES_PGDATA_PATH=/var/lib/postgresql/data/pgdata
POSTGRES_VOLUME_NAME=postgres_data_v1

# variables to run standalone
APP_PREFIX=postgresql
SERVICE_NAME=postgresql
DOCKER_RESTART_POLICY=unless-stopped
DOCKER_LOGGING_DRIVER=json-file
DOCKER_LOGGING_MAX_FILE=10
DOCKER_LOGGING_MAX_SIZE=20m
DOCKER_VOLUME_BIND_FLAG=cached
DOCKER_BACKEND_NETWORK_NAME=backend
DOCKER_FRONTEND_NETWORK_NAME=frontend